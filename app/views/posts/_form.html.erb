<%= simple_form_for(@post, html: {class:"form-horizontal"}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">

    <div class="row">
      <div class="col-md-6">

        <div class="form-group">
          <%= f.input :title, label: "Título", input_html: {class:"form-control"}, hint: "Seja descritivo e interessante." %>
        </div>
     
  
        <div class="form-group">
          <%= f.input :content, label: false, as: :text, label: "Conteúdo",placeholder: "Escreva aqui o conteúdo do post...", input_html: {class:"form-control"} %>
        </div>
      
      
        <div class="form-group">
          <%= f.text_field :posted_date, 'data-behaviour' => 'datepicker', class: "form-control" %>
        </div>

        <%= f.button :submit, input_html: {class: "btn btn-success"} %>

      </div>
    </div>

  </div>

<% end %>
