
<ul class="bloco-posts">

  <% @posts.reverse_each do |post|  %>

    <li class="post">

      <div class="item">
        
        <%= link_to post.user.profile_name do %>
          <%= image_tag post.user.avatar.url(:thumb), size: "55x55", class: "avatar img-circle" %>
        <% end %>
        
        <h2><%= link_to post.title, post %></h2>
       
        <div class="resumo">
          <%= post.content[0..140]%> ...
        </div>

      </div>

      <div class="meta">
        <%= link_to time_ago_in_words(post.created_at).capitalize + " atrás", post %>

        <% if user_signed_in? %>
          <% if current_user.id == post.user.id %>
            <span class="admin">
              <%= link_to "Editar", edit_post_path(post) %>
              <%= link_to "Excluir", post, :method => :delete, data: { confirm: "Você tem certeza que deseja excluir #{post.title}?"} %>
            </span>
          <% end %>
        <% end %>
      </div>

    </li>

  <% end %>

</ul>