<% @posts.each do |post|  %>
  <div class="posts">
    <h2><%= link_to post.title, post %></h2>
    <p><%= post.user.first_name %></p>
    <p><%= post.content %></p>
    <div class="meta">
      <span class="admin">
        <%= time_ago_in_words(post.created_at) %> | 
        <%= link_to "Editar", edit_post_path(post) %> | 
        <%= link_to "Excluir", post, :method => :delete, data: { confirm: "VocÃª tem certeza que deseja excluir #{post.title}?"} %>
      </span>
    </div>
  </div>
<% end %>