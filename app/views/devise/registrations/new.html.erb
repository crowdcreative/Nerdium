<h2>Criar conta</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }, defaults: {input_html: {class: "form-control"}, wrapper_html: {class: "form-group"}} ) do |f| %>
  <%= devise_error_messages! %>

  
    <%= f.input :first_name, label: "Nome" %>
 
    <%= f.input :last_name, label: "Sobrenome" %>
 
    <%= f.input :profile_name, label: "Username" %>
  
    <%= f.input :bio, as: :text, label: "Bio" %>
  
    <%= f.input :avatar, as: :file, label: "Avatar", input_html: {class: ""} %>

    <%= f.input :email, as: :email, label: "Email" %></div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Esperando confirmação do email: <%= resource.unconfirmed_email %></div>
    <% end %>

    <%= f.input :password, as: :password, input_html: {autocomplete: "off"}, label: "Senha" %></div>

    <%= f.input :password_confirmation, as: :password, input_html: {autocomplete: "off"}, label: "Confirmação da senha", hint: "Repita a senha." %></div>


  <div><%= f.submit "Cadastrar" %></div>
<% end %>

<%= render "devise/shared/links" %>

<%= render "posts/return_button" %>